<p>Confirmation page</p>
<h2>Order ID: <%= @order.id %></h2>
<h4>User Information</h4>
<section class ="cart-item__container">
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Mailing Adress</th>
      <th>Last 4 Didgits of Credit Card</th>
      <th>Credit Card Exp Date</th>
    </tr>
    <tr>
      <td><%= @order.name %></td>
      <td><%= @order.email %></td>
      <td><%= @order.mailing_address %></td>
      <td><%= @order.cc_number %></td>
      <td><%= @order.cc_exp_date %></td>
    </tr>
  </table>
</section>

<section class ="cart-item__container">
  <h3>Order Details</h3>
  <table class="table">
   <thead>
    <tr>
      <th>Product name</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </tr>
    <thead>
    <tbody>
    <%@order.orderitems.each do |item|%>
    <tr>
      <td><%= item.product.name %></td>
      <td><%= item.quantity %></td>
      <td><%= item.price %></td>
    </tr>
    <% end %>
    <tr>
      <td></td>
      <td>Total</td>
      <td><%=@order.total %></td>
    </tr>
    </tbody>
  </table>
</section>

<%= button_to "Back to products", root_path, method: :get, class: "btn btn-primary" %>