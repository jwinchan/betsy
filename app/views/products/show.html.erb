<section class="d-flex flex-wrap">
  <div class="col-8">
    <%= image_tag "#{@product.photo_url}", alt: "filler" %>
  </div>
  <div class="d-flex flex-column col-4 product-right">
    <h1> <%= @product.name %> </h1>
    <p> $<%= @product.price %> </p>
    <%= form_with model: @orderitem, class: 'create-orderitem', url: product_order_items_path(@product) do |f| %>
      <div>
        <%= f.label :quantity %>
        <%= f.select :quantity, @product.create_stock_collection, selected: :quantity %>
      </div>
      <%= f.submit "Add to cart", class: "btn btn-primary" %>
    <% end %>
    <section>
      <p class="font-weight-bolder">Description:</p>
      <p> <%=  @product.description %> </p>
    </section>
  </div>
</section>

<section>
    <div>
      <h2>Product Review</h2>
      <%= button_to "Add New Review", new_product_review_path(@product), method: :get, class: "nav-link" %>
    </div>  
    <table class="table">
    <% @product.product_reviews.each do |review| %>
      <tr>
        <th>Review ID: <%= review.id %></th>
      </tr>
      <tr>
        <td>Rating: <%= review.rating %> </td>
      </tr>
      <tr>
        <td>Description: <%= review.description %> </td>
      </tr>
      <tr>
        <div>
          <%= button_to "Edit Review", edit_product_review_path(review.id), method: :get, class: "nav-link" %>
          <%= button_to "Delete Review", product_review_path(review), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger", rel: "nofollow" %>
        </div>
      </tr>
    <% end %>
    </table>
</section>
