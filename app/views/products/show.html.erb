<section class="d-flex flex-wrap">
  <div class="col-8">
    <%= image_tag "#{@product.photo_url}", alt: "filler" %>
  </div>
  <div class="d-flex flex-column col-4 product-right">
    <h1> <%= @product.name %> </h1>
    <p> $<%= @product.price %> </p>
    <%= form_with model: @orderitem, class: 'create-orderitem', url: product_order_items_path(@product) do |f| %>
      <div>
      <%= f.label :quantity %>
        <% currently_instock = [] %>
        <% @product.stock.times { |value| currently_instock << [value + 1, value + 1] } %>
        <%= f.select :quantity, currently_instock %>
      </div>
      <%= f.submit "Add to cart", class: "btn btn-primary" %>
    <% end %>
    <section>
      <p class="font-weight-bolder">Description:</p>
      <p> <%=  @product.description %> </p>
    </section>
  </div>
</section>
