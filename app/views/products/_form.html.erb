<section>
  <%= form_with model: @product do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name%>
    </div>
    <div class="form-group">
    <%= f.label :stock %>
      <%= f.text_field :stock %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>
    <div class="form-group">
      <%= f.label :photo_url %>
      <%= f.text_field :photo_url %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class="form-group">
      <%= f.submit action_name, class: "btn btn-primary" %>
    </div>
  <% end %>
</section>