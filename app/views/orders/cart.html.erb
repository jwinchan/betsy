<h2><%= @cart.orderitems.count %> item(s) in your cart</h2>
<article class ="cart-item__container">
  <table class="table">
    <thead>
      <tr>
        <th>Item</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Update Quantity</th>
        <th>Remove Item</th>
      </tr>
    </thead>
    <tbody>
    <% @cart.orderitems.each do |item| %>
      <tr>
        <td><%= link_to item.product.name, product_path(item.product.id) %></td>
<!--        <td><%#= item.quantity %></td>-->
        <%= form_with scope: @orderitem, url: cart_update_path(item.id), method: :patch do |f| %>
        <td>
          <%= f.select(:quantity, options_for_select(item.product.create_stock_collection, selected: item.quantity)) %>
        </td>
        <td>$<%= item.price %></td>
        <td><%= f.submit "Update", class: "btn btn-primary" %></td>
        <% end %>
        <td><%= button_to "Remove", order_item_path(item.id), method: :delete, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
    </tbody>

  </table>
</article>
  <% @cart.orderitems.each do |item| %>
      <p><%= link_to item.product.name, product_path(item.product.id) %></p>
    <%= form_with model: @orderitem, url: cart_update_path(item.id), method: :patch do |f| %>
      <%= f.select(:quantity, options_for_select(item.product.create_stock_collection, selected: item.quantity)) %>
      <p>$<%= item.price %></p>
      <p><%= f.submit "Update", class: "btn btn-primary" %></p>
    <% end %>
  <% end %>
